<form class="form-horizontal" role="form">
  <div class="form-group">
    <div class="add_contact">
      <div class="col-sm-5">
        <input type="text" class="form-control" id="name_first" placeholder="First Name">
      </div>
    </div>
    <div class="add_contact">
      <div class="col-sm-5">
        <input type="text" class="form-control" id="name_last" placeholder="Last Name">
      </div>
    </div>
    <div class="add_contact">
      <div class="col-sm-5">
        <input type="text" class="form-control" id="email" placeholder="someone@example.com">
      </div>
    </div>
    <div class="add_contact">
      <div class="col-sm-5">
        <input type="text" class="form-control" id="phone" placeholder="Phone Number">
      </div>
    </div>
    <div class="add_contact">
      <div class="col-sm-5">
        <input type="text" class="form-control" id="safeWord" placeholder="Insert Safe Word">
      </div>
    </div>
    <div class="add_contact">
      <div class="col-sm-5">
        <input type="text" class="form-control" id="unsafeWord" placeholder="Insert Unsafe Word">
      </div>
    </div>
    <select class="form-control col-sm-5" width="300" style="width:300px" name="carrier">
      <option>Select Carrier</option>
      <option value="verizon">Verizon</option>
      <option value="uscellular">US Cellular</option>
      <option value="att">AT&T</option>
      <option value="tmobile">T-Mobile</option>
      <option value="sprint">Sprint</option>
      <option value="boostmobile">Boost Mobile</option>
      <option value="virginmobile">Virgin Mobile</option>
    </select>
  </div>

  <div class=" col-sm-10">
    <br><button type="submit" class="btn btn-default save-button">Save Contact</button>
  </div>
</form>